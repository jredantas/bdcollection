<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<%= form_tag(issues_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Issues" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @issues.blank? %>
  <h4>There are no issues containing the term <%= params[:search] %>.</h4>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Publisher</th>
      <th>Seller</th>
      <th>Cover Date</th>
      <th>Acquisition Date</th>
      <th>Cover price</th>
      <th>Acquisition price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.subtitle %></td>
        <td><%= issue.publisher_id %></td>
        <td><%= issue.seller_id %></td>
        <td><%= issue.date_publish %></td>
        <td><%= issue.date_acquisition %></td>
        <td><%= issue.cover_price %></td>
        <td><%= issue.acquisition_price %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
<br>
<%= link_to 'Back', root_path %>
