<div class="container-narrow">
  <div class="masthead">
    <%= render 'layouts/user_header' %>
    <h3 class="muted offset1"><%= link_to "BD Collection", root_path %></h3>
    <h5 class="muted offset1">A system for 9th art collectors.</h5>
  </div>
  <hr />
</div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span4">
          <!--<%= image_tag("bd-collection-ico.jpg", :alt => "rss feed") %>-->
        </div>
        <div class="span8">
          <p class="alert"><%= alert %></p>
          <p class="yield"><%= yield %></p>
          <%= javascript_include_tag "application" %>
        </div>
      </div>
    </div>



  </body>
